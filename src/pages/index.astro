---
import Layout from "../layouts/Layout.astro";
import Cube from "../components/Cube.astro";
import ImagesList from "../components/ImageList";
import ConnectWallet from "../components/ConnectWallet";
import { type Image } from "../types/Image";

const images: Array<Image> = [
  { id: 1, url: "https://picsum.photos/id/27/200/300" },
  { id: 2, url: "https://picsum.photos/id/28/200/300" },
  { id: 3, url: "https://picsum.photos/id/29/200/300" },
  { id: 4, url: "https://picsum.photos/id/26/200/300" },
  { id: 5, url: "https://picsum.photos/id/23/200/300" },
];
---

<Layout title="Crypto Crates - Home">
  <main>
    <header>
      <nav class="p-8 flex justify-between items-center">
        <div class="flex gap-x-20 items-center">
          <a class="text-2xl font-bold" href="/">Crypto Crates</a>
          <input
            class="rounded-full bg-zinc-700 px-8 py-3 w-[400px] hidden lg:block"
            placeholder="Search..."
            type="text"
          />
        </div>
        <div class="flex gap-x-8 items-center">
          <div class="lg:flex gap-x-10 text-lg hidden">
            <a href="/">Explore</a>
            <a href="/">Collections</a>
            <a href="/">Gallery</a>
          </div>
          <div class="flex gap-x-4">
            <button class="border px-8 py-3 rounded-full hidden lg:block"
              >Whatever</button
            >
            <ConnectWallet client:visible />
            <!--<button class="px-8 py-3 rounded-full bg-blue-700"
              >Connect wallet</button
            >-->
          </div>
        </div>
      </nav>
    </header>

    <section
      class="flex flex-col lg:flex-row justify-center items-center gap-x-10 mt-28 px-4 lg:px-40 mb-20"
    >
      <div class="inline-flex flex-col mr-20">
        <div
          class="flex justify-center items-center rounded-full bg-zinc-600 px-8 py-2 w-[200px] mb-5"
        >
          <p>Discover NFT</p>
        </div>
        <h1 class="text-7xl mb-5 w-[400px]">Ready to get started?</h1>
        <p class="text-zinc-300 text-lg">Explore, sell and create your NFTs.</p>
      </div>
      <Cube />
    </section>

    <section>
      <ImagesList images={images} />
    </section>
  </main>
</Layout>
